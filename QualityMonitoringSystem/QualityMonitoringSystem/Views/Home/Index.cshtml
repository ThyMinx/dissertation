@{
    ViewBag.Title = "Home Page";
}

<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>Dashboard <small style="color:#cccccc;">Manage your work</small></h1>
            </div>
            <div class="col-md-2">

            </div>
        </div>
    </div>
</header>

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</section>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "list-group-item active main-color-bg" })
                    @Html.ActionLink("Staff", "Index", "Staffs", new { area = "" }, new { @class = "list-group-item" })
                    @Html.ActionLink("Coursework", "Index", "Courseworks", new { area = "" }, new { @class = "list-group-item" })
                    @Html.ActionLink("Modules", "Index", "Modules", new { area = "" }, new { @class = "list-group-item" })
                </div>

                <div class="well">
                    <h4>Coursework left to review</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%;">
                            60%
                        </div>
                    </div>
                    <h4>Coursework to publish</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width:80%;">
                            80%
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Workload Overview</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-4">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-book" aria-hidden="true"></span> 20</h2>
                                Coursework to do
                            </div>
                        </div>
                        <div class="col-md-4 dash-box">
                            <div class="well">
                                <h2><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> 12</h2>
                                Coursework reviewed
                            </div>
                        </div>
                        <div class="col-md-4 dash-box">
                            <div class="well">
                                <h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 15</h2>
                                Courseworks reviewing
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
